<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="com.pushcoin.lib.core.PREF_OFFLINE"
        android:summary="@string/pref_description_enable_offline_mode"
        android:title="@string/pref_title_enable_offline_mode" />
    
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="com.pushcoin.lib.core.PREF_DEMO"
        android:summary="@string/pref_description_enable_demo_mode"
        android:title="@string/pref_title_enable_demo_mode" />
    
    <ListPreference
        android:defaultValue="@string/url_pushcoin_prod"
        android:entries="@array/pref_server_connection_titles"
        android:entryValues="@array/pref_server_connection_values"
        android:key="com.pushcoin.lib.core.PREF_URL"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_server_connection" />

</PreferenceScreen>
