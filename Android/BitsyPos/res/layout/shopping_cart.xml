<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:geekui="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/black"
	android:paddingLeft="5dp" >

	<Button android:text="Check Out" 
		android:id="@+id/shopping_cart_checkout_button" 
		android:background="@drawable/btn_green"
		style="@style/ShoppingCartCheckout" 
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" 
		android:layout_marginTop="5dp" />

	<Button android:text="Start Over" 
		android:id="@+id/shopping_cart_startover_button" 
		android:background="@drawable/btn_red"
		style="@style/ShoppingCartAction" 
		android:layout_above="@id/shopping_cart_checkout_button"
		android:layout_alignParentLeft="true" />

	<Button android:text="Print Cart" 
		android:id="@+id/shopping_cart_print_button" 
		android:background="@drawable/btn_purple"
		style="@style/ShoppingCartAction"
		android:layout_above="@id/shopping_cart_checkout_button"
		android:layout_centerHorizontal="true"/>

	<Button android:text="Queue Order" 
		android:id="@+id/shopping_cart_queueup_button" 
		android:background="@drawable/btn_yellow" 
		style="@style/ShoppingCartAction"
		android:layout_above="@id/shopping_cart_checkout_button"
		android:layout_alignParentRight="true" />

	<com.mobsandgeeks.ui.TypefaceTextView android:text="$4.95"
		android:id="@+id/shopping_cart_total"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="42dp"
		android:textColor="@color/DarkSeaGreen"
		geekui:customTypeface="fonts/DejaVuSans-ExtraLight.ttf"
		android:layout_above="@id/shopping_cart_queueup_button"
		android:layout_alignParentRight="true" />

	<com.mobsandgeeks.ui.TypefaceTextView android:text="Total:"
		android:id="@+id/shopping_cart_total_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="42dp"
		android:textColor="@color/DarkTurquoise"
		geekui:customTypeface="fonts/DejaVuSans-ExtraLight.ttf"
		android:layout_above="@id/shopping_cart_startover_button"
		android:layout_toLeftOf="@id/shopping_cart_total" />

	<GridView xmlns:android="http://schemas.android.com/apk/res/android" 
		android:id="@+id/shopping_cart_list"
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:numColumns="4"
		android:verticalSpacing="3dp"
		android:horizontalSpacing="3dp"
		android:stretchMode="columnWidth"
		android:gravity="left"
		android:drawSelectorOnTop="false"
		android:listSelector="@android:color/transparent" />

</RelativeLayout>
