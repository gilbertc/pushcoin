<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:geekui="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/shopping_cart_row_selector" >

	<com.mobsandgeeks.ui.TypefaceTextView
		android:id="@+id/shopping_cart_entry_title"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textSize="20dp"
		android:paddingLeft="4dp"
		android:textColor="@color/black"
		geekui:customTypeface="fonts/DejaVuSansCondensed.ttf" />

	<com.mobsandgeeks.ui.TypefaceTextView
		android:id="@+id/shopping_cart_entry_price"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="18dp"
		android:textColor="@color/DarkSlateGrey"
		geekui:customTypeface="fonts/DejaVuSans.ttf" />

</LinearLayout>
