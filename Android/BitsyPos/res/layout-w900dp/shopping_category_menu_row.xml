<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:geekui="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/category_menu_glyph_shape"
	android:orientation="horizontal">

	<com.mobsandgeeks.ui.TypefaceTextView
		android:id="@+id/shopping_category_menu_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/android_holo_blue_light"
		geekui:customTypeface="fonts/modernpics.otf"
		android:textSize="14dp"
		android:shadowColor="#444444"
		android:shadowDx="-1"
		android:shadowDy="-1"
		android:shadowRadius="0.8"
		android:padding="6dp" />

	<com.mobsandgeeks.ui.TypefaceTextView
		android:id="@+id/shopping_category_menu_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/lightui_mediumgray"
		android:shadowColor="#333333"
		android:shadowDx="-0.5"
		android:shadowDy="-0.5"
		android:shadowRadius="0.6"
		android:textSize="16dp"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:paddingLeft="4dp"
		android:paddingRight="6dp"
		geekui:customTypeface="fonts/TT0468M.ttf" />

</LinearLayout>
