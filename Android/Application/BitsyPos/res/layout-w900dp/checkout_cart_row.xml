<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:geekui="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="6dp"
	android:paddingBottom="6dp"
	android:paddingLeft="3dp"
	android:paddingRight="3dp">

	<com.mobsandgeeks.ui.TypefaceTextView
		android:id="@+id/checkout_cart_entry_title"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:textSize="18sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/lightui_darkgray"
		geekui:customTypeface="fonts/DejaVuSansCondensed.ttf" />

	<com.mobsandgeeks.ui.TypefaceTextView
		android:id="@+id/checkout_cart_entry_price"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignBottom="@id/checkout_cart_entry_title"
		android:textSize="18sp"
		android:textColor="@color/lightui_darkgray"
		geekui:customTypeface="fonts/TT0467M.ttf" />

	<com.mobsandgeeks.ui.TypefaceTextView
		android:id="@+id/checkout_cart_entry_note"
		android:layout_below="@id/checkout_cart_entry_title"
		android:layout_alignParentLeft="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="4dp"
		android:visibility="gone"
		android:textSize="14sp"
		android:textColor="@color/lightui_darkgray"
		geekui:customTypeface="fonts/DejaVuSansCondensed-Oblique.ttf" />

	<View
		android:layout_width="match_parent"
		android:layout_height="10dp"
		android:layout_below="@id/checkout_cart_entry_note" />

</RelativeLayout>
