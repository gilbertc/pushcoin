<?xml version="1.0" encoding="utf-8"?>
<LinearLayout		
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:geekui="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:orientation="vertical"
		android:layout_weight="3"
		android:layout_width="0dp"
		android:layout_height="match_parent" >

		<LinearLayout
			android:orientation="horizontal"
			android:layout_alignParentBottom="true"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<com.mobsandgeeks.ui.TypefaceTextView 
				android:text="Amount Due: "
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textSize="28sp"
				android:gravity="right"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:textColor="@color/lightui_darkgray"
				geekui:customTypeface="fonts/DejaVuSansCondensed.ttf" />

			<com.mobsandgeeks.ui.TypefaceTextView
				android:text="$34.12"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="55sp"
				android:paddingRight="6dp"
				android:textColor="@color/android_holo_blue_bright"
				geekui:customTypeface="fonts/TT0467M.ttf" />

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_alignParentBottom="true"
			android:layout_marginTop="12dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<com.mobsandgeeks.ui.TypefaceTextView 
				android:text="Charge Amount: "
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:textSize="28sp"
				android:gravity="right"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:textColor="@color/lightui_darkgray"
				geekui:customTypeface="fonts/DejaVuSansCondensed.ttf" />

			<EditText
				android:text="34.12"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:gravity="right"
				android:minEms="3"
				android:textColor="@color/android_holo_blue_bright"
				android:textSize="38sp" />

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_marginTop="32dp"
			android:layout_marginLeft="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<Button android:text="Cash\u00A0or\nCheck"
				android:background="@drawable/btn_green"
				android:layout_marginRight="2dp"
				style="@style/CheckoutAction" />

			<Button android:text="Read\nCard"
				android:background="@drawable/btn_blue"
				android:layout_marginRight="2dp"
				style="@style/CheckoutAction" />

			<Button android:text="Enter\nCard"
				android:background="@drawable/btn_yellow"
				android:layout_marginRight="2dp"
				style="@style/CheckoutAction" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/refresh_match_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="32dp"
			android:layout_marginLeft="5dp"
			android:background="@drawable/background_view_rounded_single"
			android:orientation="vertical"
			android:visibility="visible" >

			<LinearLayout
				android:orientation="horizontal"
				android:layout_alignParentBottom="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" >

				<com.mobsandgeeks.ui.TypefaceTextView 
					android:text="Discount:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="28sp"
					android:gravity="left"
					android:padding="10dp"
					android:textColor="@color/lightui_darkgray"
					geekui:customTypeface="fonts/DejaVuSansCondensed.ttf" />

				<com.mobsandgeeks.ui.TypefaceTextView
					android:text="15%"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="28sp"
					android:paddingRight="6dp"
					android:textColor="@color/android_holo_blue_bright" />

			</LinearLayout>

			<SeekBar
				android:id="@+id/discount_bar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:progress="0"
				android:max="80"
				android:progressDrawable="@drawable/progressbar"
				android:secondaryProgress="0" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:orientation="horizontal"
				android:visibility="visible"
				android:weightSum="10" >

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:gravity="center_horizontal"
					android:text="10%"
					android:textColor="@android:color/white"
					android:textStyle="bold" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:gravity="center_horizontal"
					android:text="20%"
					android:textColor="@android:color/white"
					android:textStyle="bold" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:gravity="center_horizontal"
					android:text="40%"
					android:textColor="@android:color/white"
					android:textStyle="bold" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:gravity="center_horizontal"
					android:text="60%"
					android:textColor="@android:color/white"
					android:textStyle="bold" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:gravity="center_horizontal"
					android:text="70%"
					android:textColor="@android:color/white"
					android:textStyle="bold" />

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" >

				<com.mobsandgeeks.ui.TypefaceTextView 
					android:text="Dollars:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="28sp"
					android:gravity="left"
					android:padding="10dp"
					android:textColor="@color/lightui_darkgray"
					geekui:customTypeface="fonts/DejaVuSansCondensed.ttf" />
				
				<EditText
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_margin="10dp"
					android:inputType="numberDecimal"
					android:gravity="right"
					android:minEms="3"
					android:textSize="28sp"
					android:textColor="@color/android_holo_blue_bright" />

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<ListView
		android:divider="@drawable/dotted"
		android:dividerHeight="1px"
		android:footerDividersEnabled="false"
		android:headerDividersEnabled="false"
		android:cacheColorHint="@android:color/transparent"
		android:paddingTop="12dp"
		android:paddingLeft="1dp"
		android:paddingRight="1dp"
		android:layout_weight="4"
		android:layout_width="0dp"
		android:layout_height="match_parent" />

</LinearLayout>
