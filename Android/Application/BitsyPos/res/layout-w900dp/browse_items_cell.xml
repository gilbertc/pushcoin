<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:geekui="http://schemas.android.com/apk/res-auto"
	android:background="#30707070"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="22dp"
	android:paddingBottom="22dp"
	android:paddingRight="10dp"
	android:paddingLeft="10dp"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="50sp">

		<com.mobsandgeeks.ui.TypefaceTextView
			android:id="@+id/item_summary_title"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:gravity="top"
			android:textSize="20sp"
			android:textColor="@color/lightui_mediumgray"
			geekui:customTypeface="fonts/DejaVuSansCondensed.ttf" />

		<com.mobsandgeeks.ui.TypefaceTextView
			android:id="@+id/item_summary_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:textColor="@color/android_holo_blue_light"
			android:textStyle="bold"
			geekui:customTypeface="fonts/DejaVuSans.ttf" />

	</LinearLayout>

</LinearLayout>
