<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:geekui="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:background="@drawable/light_background"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<RelativeLayout
		android:id="@+id/item_configuration_arena"
		android:background="@drawable/top_panel_background"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:orientation="horizontal">

			<com.mobsandgeeks.ui.TypefaceTextView
				android:text="Push"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="46dp"
				android:shadowColor="#333333"
				android:shadowDx="-0.5"
				android:shadowDy="-0.5"
				android:shadowRadius="0.6"
				android:textColor="@color/lightui_lightgray"
				geekui:customTypeface="fonts/TT0468M.ttf" />

			<com.mobsandgeeks.ui.TypefaceTextView
				android:text="Coin"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="46dp"
				android:shadowColor="#333333"
				android:shadowDx="-0.5"
				android:shadowDy="-0.5"
				android:shadowRadius="0.6"
				android:textColor="@color/black"
				geekui:customTypeface="fonts/TT0468M.ttf" />

		</LinearLayout>

		<Button android:text="Refresh" 
			android:background="@drawable/btn_blue" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="7dp"
			android:padding="6dp"
			style="@style/CommonButton" />

	</RelativeLayout>

	<!-- header drop shadow -->
	<View
		android:layout_width="match_parent"
		android:layout_height="6dp"
		android:background="@drawable/top_panel_drop_shadow" />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:geekui="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:gravity="center"
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="0dp" >

		<com.mobsandgeeks.ui.TypefaceTextView
			android:id="@+id/account_balance_field"
			android:text="$12.49"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="96dp"
			android:textColor="@color/black"
			geekui:customTypeface="fonts/DejaVuSans-ExtraLight.ttf" />

		<com.mobsandgeeks.ui.TypefaceTextView
			android:id="@+id/status_field"
			android:text="..."
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="26dp"
			android:textColor="@color/black"
			geekui:customTypeface="fonts/DejaVuSans-ExtraLight.ttf" />

	</LinearLayout>

	<LinearLayout 
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:orientation="horizontal">

		<FrameLayout
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent" />

		<RelativeLayout
			android:background="@drawable/window_shape"
			android:layout_weight="8"
			android:layout_width="0dp"
			android:layout_height="match_parent" >

			<com.mobsandgeeks.ui.TypefaceTextView
				android:id="@+id/recent_transaction_amount_field"
				android:text="$5.00"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="8dp"
				android:textSize="22dp"
				android:textColor="@color/black"
				geekui:customTypeface="fonts/DejaVuSans.ttf" />

			<com.mobsandgeeks.ui.TypefaceTextView
				android:id="@+id/recent_transaction_date_field"
				android:text="Yesterday 12:01 PM"
				android:layout_alignParentRight="true"
				android:layout_above="@id/recent_transaction_amount_field"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="10dp"
				android:textSize="22dp"
				android:textColor="@color/lightui_darkestgray"
				geekui:customTypeface="fonts/DejaVuSans-ExtraLight.ttf" />

			<com.mobsandgeeks.ui.TypefaceTextView
				android:text="Paid"
				android:layout_toLeftOf="@id/recent_transaction_amount_field"
				android:layout_alignParentBottom="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="10dp"
				android:textSize="22dp"
				android:textColor="@color/lightui_darkestgray"
				geekui:customTypeface="fonts/DejaVuSans-ExtraLight.ttf" />

			<com.mobsandgeeks.ui.TypefaceTextView
				android:id="@+id/recent_transaction_business_name_field"
				android:text="Wheaton Academy"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:textSize="22dp"
				android:textColor="@color/black"
				geekui:customTypeface="fonts/DejaVuSans-Bold.ttf" />

			<com.mobsandgeeks.ui.TypefaceTextView
				android:id="@+id/recent_transaction_street_field"
				android:text="900 Prince Crossing"
				android:layout_alignParentLeft="true"
				android:layout_below="@id/recent_transaction_business_name_field"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:paddingTop="4dp"
				android:includeFontPadding="false"
				android:textSize="18dp"
				android:textColor="@color/lightui_darkestgray"
				geekui:customTypeface="fonts/DejaVuSans-ExtraLight.ttf" />

			<com.mobsandgeeks.ui.TypefaceTextView
				android:id="@+id/recent_transaction_city_state_zip_field"
				android:text="West Chicago, IL 60185"
				android:layout_alignParentLeft="true"
				android:layout_below="@id/recent_transaction_street_field"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:paddingTop="4dp"
				android:includeFontPadding="false"
				android:textSize="18dp"
				android:textColor="@color/lightui_darkestgray"
				geekui:customTypeface="fonts/DejaVuSans-ExtraLight.ttf" />

			<com.mobsandgeeks.ui.TypefaceTextView
				android:id="@+id/recent_transaction_phone_field"
				android:text="Ph: 630-562-7500"
				android:layout_alignParentLeft="true"
				android:layout_below="@id/recent_transaction_city_state_zip_field"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:paddingTop="4dp"
				android:includeFontPadding="false"
				android:textSize="18dp"
				android:textColor="@color/lightui_darkestgray"
				geekui:customTypeface="fonts/DejaVuSans-ExtraLight.ttf" />

		</RelativeLayout>

		<FrameLayout
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent" />

	</LinearLayout>

	<LinearLayout 
		android:layout_weight="3"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:orientation="horizontal">

		<FrameLayout
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent" />

		<ListView
			android:id="@+id/past_transactions_list"
			android:footerDividersEnabled="false"
			android:headerDividersEnabled="false"
			android:cacheColorHint="@android:color/transparent"
			android:layout_weight="3"
			android:layout_width="0dp"
			android:layout_height="match_parent" />

		<FrameLayout
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent" />

	</LinearLayout>

</LinearLayout>

