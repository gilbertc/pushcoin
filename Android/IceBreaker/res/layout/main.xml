<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:geekui="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:background="@drawable/light_background"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout 
		android:background="@drawable/top_panel_background"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<com.mobsandgeeks.ui.TypefaceTextView
			android:id="@+id/pushcoin_logo_part_one"
			android:text="Push"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:textSize="42dp"
			android:paddingRight="2dp"
			android:shadowColor="#333333"
			android:shadowDx="-0.5"
			android:shadowDy="-0.5"
			android:shadowRadius="0.6"
			android:textColor="@color/lightui_lightgray"
			geekui:customTypeface="fonts/TT0468M.ttf" />

		<com.mobsandgeeks.ui.TypefaceTextView
			android:id="@+id/pushcoin_logo_part_two"
			android:text="Coin"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="40dp"
			android:textSize="46dp"
			android:shadowColor="#333333"
			android:shadowDx="-0.5"
			android:shadowDy="-0.5"
			android:shadowRadius="0.6"
			android:textColor="@color/black"
			geekui:customTypeface="fonts/TT0468M.ttf" />

		<LinearLayout 
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:gravity="right"
			android:divider="@drawable/vertical_divider"
			android:showDividers="beginning|middle"
			android:orientation="horizontal">

			<Button android:text="Balance" 
				android:id="@+id/balance_button"
				android:background="#20000000" 
				android:textSize="18dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:paddingRight="24dp"
				android:paddingLeft="24dp"
				style="@style/CommonButton" />

			<Button android:text="History" 
				android:id="@+id/history_button"
				android:background="@android:color/transparent" 
				android:textSize="18dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:paddingRight="24dp"
				android:paddingLeft="24dp"
				style="@style/CommonButton" />

			<Button android:text="R" 
				android:id="@+id/refresh_button"
				android:background="@android:color/transparent" 
				android:textSize="42dp"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:paddingRight="24dp"
				android:paddingLeft="24dp"
				style="@style/CommonButton" />

		</LinearLayout>

	</LinearLayout>

	<!-- header drop shadow -->
	<View
		android:layout_width="match_parent"
		android:layout_height="6px"
		android:background="@drawable/top_panel_drop_shadow" />

	<android.support.v4.view.ViewPager
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/pager"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

</LinearLayout>

