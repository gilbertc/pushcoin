<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:geekui="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<com.mobsandgeeks.ui.TypefaceTextView
		android:id="@+id/submitting_status"
		android:text="Please wait..."
		android:layout_centerHorizontal="true"
		android:layout_alignParentTop="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:layout_marginBottom="12dp"
		android:textSize="28dp"
		android:textColor="@color/black"
		geekui:customTypeface="fonts/DejaVuSans-ExtraLight.ttf" />

	<ProgressBar
		android:id="@+id/submitting_progress_bar"
		android:indeterminate="true"
		android:indeterminateBehavior="cycle"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/submitting_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		style="@android:style/Widget.ProgressBar.Large"/>

	<Button
		android:id="@+id/try_again_button"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/submitting_progress_bar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="22dp"
		android:paddingLeft="24dp"
		android:paddingRight="24dp"
		android:text="Cancel"
		android:textSize="22dp"
		android:textColor="@color/black" />

</RelativeLayout>

